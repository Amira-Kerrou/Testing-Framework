pipeline {
    agent any

    stages {
        stage('git repo & clean') {
            steps {
                sh 'rm -rf Testing-Framework'
                sh 'git clone https://github.com/Amira-Kerrou/Testing-Framework.git'
                sh 'mvn clean -f Testing-Framework/pom.xml'
            }
        }
        stage('install') {
            steps {
                dir('Testing-Framework') {
                    sh 'mvn install'
                }
            }
        }
        stage('test') {
            steps {
                sh "mvn clean test -f Testing-Framework/pom.xml -Dtest=AddDeleteDataPF -Dallure.results.directory=Testing-Framework/Automation Testing Framework/allure-results"
            }
        }
        stage('package') {
            steps {
                sh 'mvn package -f Testing-Framework/pom.xml'
            }
        }
        stage('Allure Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'Testing-Framework/Automation Testing Framework/allure-results']]
                ])
            }
        }
    }
}
