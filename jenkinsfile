pipeline {
    agent any

    stages {
        stage('git repo & clean') {
            steps {
                sh 'rm -rf Testing-Framework'
                sh 'git clone https://github.com/Amira-Kerrou/Testing-Framework.git'
            }
        }
        stage('install') {
            steps {
                dir('var/jenkins-home/workspace/Automation-Testing-Framework/testSuite/testng.xml) {
                    sh 'mvn clean install'
                }
            }
        }
        stage('test') {
            steps {
                dir('Testing-Framework') {
                    sh "mvn test -Dtest=AddDeleteDataPF -Dallure.results.directory='Automation Testing Framework/allure-results'"
                }
            }
        }
        stage('package') {
            steps {
                dir('Testing-Framework') {
                    sh 'mvn package'
                }
            }
        }
        stage('Allure Report') {
            steps {
                allure([
                    includeProperties: false,
                    jdk: '',
                    properties: [],
                    reportBuildPolicy: 'ALWAYS',
                    results: [[path: 'Testing-Framework/Automation Testing Framework/allure-results']]
                ])
            }
        }
    }
}
